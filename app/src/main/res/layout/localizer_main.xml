<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/localizer_main"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/localizerButton"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        android:background="@drawable/trying_circle"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/localizer_map"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.findus.ModifiedImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/localizer_map"
        >
    </com.example.findus.ModifiedImageView>

    <AutoCompleteTextView
        android:id="@+id/localizer_areamap_input"
        android:layout_width="300sp"
        android:layout_height="70sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@drawable/bg_grey"
        android:alpha="0.85"

        android:text="COM 1 Level 2, NUS"
        app:layout_constraintEnd_toStartOf="@+id/localizerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/localizerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>

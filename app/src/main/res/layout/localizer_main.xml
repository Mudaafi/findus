<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/localizer_main"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/localizerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tester"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/localizer_map"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.findus.ModifiedImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/localizer_map"
        >
    </com.example.findus.ModifiedImageView>

</androidx.constraintlayout.widget.ConstraintLayout>
